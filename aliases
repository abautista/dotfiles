# setup a local http server
alias server='open http://localhost:8000 && python -m SimpleHTTPServer'

# I am lazy
alias c=clear
alias cutcpp='cookiecutter gh:abautista/cookiecutter-cpp'

# tmux aliases
alias tmns='tmux new -s'
alias tmls='tmux list-session'
alias tmas='tmux attach -t'
alias tmks='tmux kill-session -t'

# emacs configurations
alias sem='switch_emacs.sh spacemacs; export EMACS_CONFIGURATION="spacemacs"; open -a /Applications/Emacs.app'
alias em='switch_emacs.sh abautista; export EMACS_CONFIGURATION="abautista"; open -a /Applications/Emacs.app'
alias cem='switch_emacs.sh clojurebook; export EMACS_CONFIGURATION="clojurebook"; open -a /Applications/Emacs.app'

