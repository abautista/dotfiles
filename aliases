# setup a local http server
alias server='open http://localhost:8000 && python -m SimpleHTTPServer'

# Utils
alias c=clear
alias cutcpp='cookiecutter gh:abautista/cookiecutter-cpp'
alias n='terminal_velocity -e mdless -x md $(pwd)/Dropbox/tldr'
alias ne='terminal_velocity -e nvim -x md $(pwd)/Dropbox/tldr'

# Docker
alias dps='docker ps -a'
alias dco='docker-compose'

# tmux aliases
alias tmns='tmux new -s'
alias tmls='tmux list-session'
alias tmas='tmux attach -t'
alias tmks='tmux kill-session -t'

# emacs configurations
alias sem='switch_emacs.sh spacemacs; export EMACS_CONFIGURATION="spacemacs"'
alias em='switch_emacs.sh abautista; export EMACS_CONFIGURATION="abautista"'
alias cem='switch_emacs.sh clojurebook; export EMACS_CONFIGURATION="clojurebook"'

